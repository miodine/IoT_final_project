<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent">


        <Button
            android:id="@+id/button_data"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:onClick="btns_onClick"
            android:text="@string/dataBtnText"
            android:visibility="visible"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/button_rpy"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:onClick="btns_onClick"
            android:text="RPY"
            android:visibility="visible"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/button_LED"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:onClick="btns_onClick"
            android:text="@string/ledBtnText"
            android:visibility="visible"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/button_joystick"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:onClick="btns_onClick"
            android:text="Joystick"
            android:visibility="visible"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/button_tables"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:onClick="btns_onClick"
            android:text="DATA TABLES"
            android:visibility="visible"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/button_Settings"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_gravity="center"
            android:onClick="btns_onClick"
            android:text="@string/settingsBtnText"
            android:visibility="visible" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>