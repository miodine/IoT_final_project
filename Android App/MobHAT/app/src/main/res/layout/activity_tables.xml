<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".TablesActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"

    >
    <TextView
    android:id="@+id/textViewErrorMsg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="ERROR" android:textAlignment="center"
    android:textColor="@android:color/holo_red_dark"
    android:textStyle="bold" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="DATA"
        android:layout_marginBottom="20dp"
        android:fontFamily="serif"
        android:textColor="@color/blue"
        android:textSize="25sp"></TextView>



    <TableRow>

        <TextView
            android:text="Temperature"
            android:id="@+id/name1"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_width="80dip"
            android:layout_weight="0.8"
            android:padding="3dip"
            android:textColor="@color/Black"

            />

        <TextView
            android:id="@+id/value1"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:padding="3dip"
            android:textColor="@color/Black"
            android:layout_weight="2"/>

        <TextView
            android:id="@+id/unit1"
            android:layout_width="80dip"
            android:padding="3dip"
            android:textColor="@color/Black"
            android:layout_weight="0.8"/>
    </TableRow>

    <TableRow>

        <TextView
            android:text="Pressure"
            android:fontFamily="sans-serif-condensed-medium"
            android:id="@+id/name2"
            android:layout_width="80dip"
            android:padding="3dip"
            android:layout_weight="0.8"
            android:textColor="@color/Black"/>

        <TextView
            android:id="@+id/value2"
            android:layout_width="80dip"
            android:padding="3dip"
            android:layout_weight="2"
            android:textColor="@color/Black"
            />


        <TextView
            android:id="@+id/unit2"
            android:layout_width="80dip"
            android:padding="3dip"
            android:layout_weight="0.8"
            android:textColor="@color/Black"/>
    </TableRow>

    <TableRow>

        <TextView
            android:text="Humidity"
            android:id="@+id/name3"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_width="100dip"
            android:padding="3dip"
            android:layout_weight="0.8"
            android:textColor="@color/Black"/>

        <TextView
            android:id="@+id/value3"
            android:layout_width="80dip"
            android:padding="3dip"
            android:layout_weight="2"
            android:textColor="@color/Black"/>

        <TextView
            android:id="@+id/unit3"
            android:layout_width="80dip"
            android:padding="3dip"
            android:layout_weight="0.8"
            android:textColor="@color/Black"/>
    </TableRow>
    <TableRow>

        <TextView
            android:text="Roll"
            android:id="@+id/name4"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_width="100dip"
            android:padding="3dip"
            android:layout_weight="0.8"
            android:textColor="@color/Black"/>

        <TextView
            android:id="@+id/value4"
            android:layout_width="80dip"
            android:padding="3dip"
            android:layout_weight="2"
            android:textColor="@color/Black"/>

        <TextView
            android:id="@+id/unit4"
            android:layout_width="80dip"
            android:padding="3dip"
            android:layout_weight="0.8"

            android:textColor="@color/Black"/>
    </TableRow>
    <TableRow>

        <TextView
            android:text="Pitch"
            android:id="@+id/name5"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_width="100dip"
            android:padding="3dip"
            android:layout_weight="0.8"
            android:textColor="@color/Black"/>

        <TextView
            android:id="@+id/value5"
            android:layout_width="80dip"
            android:padding="3dip"
            android:layout_weight="2"
            android:textColor="@color/Black"/>

        <TextView
            android:id="@+id/unit5"
            android:layout_width="80dip"
            android:layout_weight="0.8"
            android:padding="3dip"
            android:textColor="@color/Black"
            />

    </TableRow>
    <TableRow>

        <TextView
            android:text="Yaw"
            android:id="@+id/name6"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_width="100dip"
            android:padding="3dip"
            android:layout_weight="0.8"
            android:textColor="@color/Black"/>

        <TextView
            android:id="@+id/value6"
            android:layout_width="80dip"
            android:padding="3dip"
            android:layout_weight="2"
            android:textColor="@color/Black"
            />

        <TextView
            android:id="@+id/unit6"
            android:layout_width="100dip"
            android:padding="3dip"
            android:layout_weight="0.8"
            android:textColor="@color/Black"/>
    </TableRow>
    <TableRow>

        <TextView
            android:text="Joystick X"
            android:id="@+id/name7"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_width="100dip"
            android:padding="3dip"
            android:layout_weight="0.8"
            android:textColor="@color/Black"/>

        <TextView
            android:id="@+id/value7"
            android:layout_width="80dip"
            android:padding="3dip"
            android:layout_weight="2"
            android:textColor="@color/Black"/>

        <TextView
            android:id="@+id/unit7"
            android:layout_width="100dip"
            android:padding="3dip"
            android:layout_weight="0.8"
            android:textColor="@color/Black"/>
    </TableRow>
    <TableRow>

        <TextView
            android:text="Joystick Y"
            android:id="@+id/name8"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_width="100dip"
            android:padding="3dip"
            android:layout_weight="0.8"
            android:textColor="@color/Black"/>

        <TextView
            android:id="@+id/value8"
            android:layout_width="80dip"
            android:padding="3dip"
            android:layout_weight="2"
            android:textColor="@color/Black"/>

        <TextView
            android:id="@+id/unit8"
            android:layout_width="100dip"
            android:padding="3dip"
            android:layout_weight="0.8"
            android:textColor="@color/Black"/>
    </TableRow>
    <TableRow>

        <TextView
            android:text="Joystick C"
            android:id="@+id/name9"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_width="100dip"
            android:padding="3dip"
            android:layout_weight="0.8"
            android:textColor="@color/Black"/>

        <TextView
            android:id="@+id/value9"
            android:layout_width="80dip"
            android:padding="3dip"
            android:layout_weight="2"
            android:textColor="@color/Black"/>

        <TextView
            android:id="@+id/unit9"
            android:layout_width="100dip"
            android:padding="3dip"
            android:layout_weight="0.8"
            android:textColor="@color/Black"/>
    </TableRow>

    <LinearLayout
        android:id="@+id/linearLayoutButtons"
        style="?android:attr/buttonBarStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="15dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/startBtnTable"
            android:backgroundTint="@color/blue"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:onClick="btns_onClick"
            android:text="@string/startbtntext"
            android:textColor="@color/white"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/stopBtnTable"
            android:backgroundTint="@color/blue"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:onClick="btns_onClick"
            android:text="@string/stopbtntext"
            android:textColor="@color/white"/>
    </LinearLayout>

</TableLayout>
